{
  "name": "@line-cook/opencode-plugin",
  "version": "0.12.0",
  "description": "Simple workflow orchestration for OpenCode sessions - mise, prep, cook, serve, tidy, plate, run",
  "main": "dist/line-cook-plugin.js",
  "types": "dist/line-cook-plugin.d.ts",
  "type": "module",
  "files": [
    "dist",
    "commands",
    "AGENTS.md"
  ],
  "opencode": {
    "name": "line",
    "version": "0.12.0",
    "description": "Simple workflow orchestration for AI-assisted development",
    "commands": [
      "line-prep",
      "line-cook",
      "line-serve",
      "line-tidy",
      "line-run",
      "line-getting-started",
      "line-plate",
      "line-mise",
      "line-brainstorm",
      "line-scope",
      "line-finalize",
      "line-architecture-audit",
      "line-decision",
      "line-help",
      "line-plan-audit",
      "line-loop"
    ]
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.0.0",
    "@opencode-ai/sdk": "^1.0.0"
  },
  "dependencies": {
    "@opencode-ai/sdk": "^1.1.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.0.0",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "bun build src/line-cook-plugin.ts --outdir dist --target bun",
    "dev": "bun build src/line-cook-plugin.ts --outdir dist --target bun --watch",
    "typecheck": "tsc --noEmit"
  },
